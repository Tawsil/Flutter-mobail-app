# Palestine Martyrs API Environment Variables
# Copy this file to .env and update with your actual values

# Environment
ENVIRONMENT=development
DEBUG=True

# Database Configuration
# For development (SQLite)
DATABASE_URL=sqlite:///./palestine_martyrs.db

# For production (PostgreSQL) - uncomment and update:
# DATABASE_URL=postgresql://username:password@localhost:5432/palestine_martyrs

# JWT Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-2024

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@palestinemartyrs.org

# Admin Configuration
ADMIN_EMAIL=admin@palestinemartyrs.org

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=./uploads

# Production settings (uncomment for production)
# ENVIRONMENT=production
# DEBUG=False
# DATABASE_URL=postgresql://prod_user:prod_password@prod_host:5432/palestine_martyrs_prod